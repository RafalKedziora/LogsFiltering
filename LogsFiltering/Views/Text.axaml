<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LogsFiltering.Views.Text">
  <DockPanel>
	<Panel DockPanel.Dock="Top" MinHeight="20">
	  <Panel.Background>
		<SolidColorBrush Color="{Binding Path=BackgroundColor}"/>
	  </Panel.Background>
	  <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
		  <TextBlock Name="CurrentLogName" Margin="20 0 0 0" FontSize="15" Foreground="White" VerticalAlignment="Center">
			  Current Day
		  </TextBlock>
		  <Button Name="Next" MinWidth="40" Background="Red" FontSize="12" VerticalAlignment="Center" Foreground="White" BorderBrush="{x:Null}" Margin="10 0 0 0">Next</Button>
		  <Button Name="Prev" MinWidth="40" Background="Red" FontSize="12" VerticalAlignment="Center" Foreground="White" BorderBrush="{x:Null}">Prev</Button>
	  </StackPanel>
	</Panel>
	<Panel DockPanel.Dock="Right">
	  <TextBox Name="logsBox" FontSize="15" Grid.ColumnSpan="3" BorderThickness="3" TextAlignment="Left" VerticalContentAlignment="Top" TextWrapping="WrapWithOverflow" Padding="5"></TextBox>
	</Panel>
  </DockPanel>
</UserControl>

<UserControl x:Class="RVS_AT.Components.Layout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RVS_AT.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <local:NavigationBar Grid.Row="0" Grid.ColumnSpan="2" DataContext="{Binding NavigationBarViewModel}" />
        <local:LeftNavigationBar Grid.Row="1" Grid.Column="0" DataContext="{Binding LeftNavigationBarViewModel}" />
        
        <ContentControl
            Grid.Row="1"
            Grid.Column="1"
            MaxWidth="1000"
            Margin="20"
            Content="{Binding ContentViewModel}" />

    </Grid>
</UserControl>
